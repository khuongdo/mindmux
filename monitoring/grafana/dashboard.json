{
  "dashboard": {
    "title": "MindMux Monitoring",
    "tags": ["mindmux", "production"],
    "timezone": "UTC",
    "schemaVersion": 27,
    "version": 1,
    "id": null,
    "panels": [
      {
        "title": "Request Rate",
        "targets": [
          {
            "expr": "rate(mindmux_requests_total[5m])"
          }
        ],
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "title": "Error Rate",
        "targets": [
          {
            "expr": "rate(mindmux_errors_total[5m])"
          }
        ],
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "title": "Response Latency (P95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(mindmux_request_duration_seconds_bucket[5m]))"
          }
        ],
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "title": "Active Tasks",
        "targets": [
          {
            "expr": "mindmux_tasks_active"
          }
        ],
        "type": "gauge",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "title": "Memory Usage",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"mindmux\"} / 1024 / 1024"
          }
        ],
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "title": "CPU Usage",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"mindmux\"}[5m])"
          }
        ],
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "title": "Database Connections",
        "targets": [
          {
            "expr": "mindmux_database_connections_active"
          }
        ],
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "title": "Redis Memory",
        "targets": [
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024"
          }
        ],
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      }
    ]
  }
}
